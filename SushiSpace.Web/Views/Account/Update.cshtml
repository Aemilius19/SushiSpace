
@using SushiSpace.Web.Models.Entites
@model User

<h2>Update User</h2>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        
        <input type="hidden" value=@Model.Email asp-for="Email" class="form-control" />
        
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a class="btn btn-secondary" asp-action="ChangePassword" asp-controller="Account" asp-route-userId=@Model.Id>Change Password</a>
</form>