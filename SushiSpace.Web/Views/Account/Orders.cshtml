@using SushiSpace.Web.Models.DTOs
@model List<OrderDTO>  

@{
    ViewData["Title"] = "Orders";
}

<div class="container">
    <h1>Orders</h1>
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Payment Status</th>
                    <th>Products</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        
                        <td>@order.Adress</td>
                        <td>@order.Email</td>
                        <td>@order.Phone</td>
                        <td>@order.PaymentStatus</td>
                        <td>
                            <ul>
                                @foreach (var product in order.Products)
                                {
                                    <li>@product.ProductName - Quantity: @product.Quantity</li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No orders found.</p>
    }
</div>
