@model ConfirmPaymentViewModel
@using Microsoft.Extensions.Options
@using SushiSpace.Web.Models.Entites
@using SushiSpace.Web.Models.ViewModels
@inject IOptions<StripeSettings> Stripe

@{
    ViewData["Title"] = "Confirm Payment";
    // Конвертируем сумму в копейки для Stripe
    var totalInCents = (int)(decimal.Parse(Model.Total) * 100);
}

<h2>Confirm Your Payment</h2>
<p>Your order has been successfully created. Please proceed with the payment.</p>

<h4>Billing Details</h4>
<p><strong>Address:</strong> @Model.Address</p>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Phone:</strong> @Model.Phone</p>

<h4>Order Details</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <strong>Total Amount:</strong> AZN @Model.Total
</div>

<form method="post" asp-action="ConfirmPayment" onchange="this.form.submit">
    <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key="@Stripe.Value.Publishablekey"
            data-amount="@totalInCents"
            data-name="Sushi Space"
            data-locale="en"
            data-description="Sample charge"
            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
            data-zip-code="true">
    </script>
</form>